# Timeout for menu
set timeout=5

# Set default boot entry as VESA Gfx @ 1024x768-32bpp
set default=0

if loadfont /@arch@/grub/unicode.pf2 ; then
	insmod vbe
	insmod gfxterm
	set gfxmode=640x480
	terminal_output gfxterm
	insmod png
	background_image /@arch@/grub/splash.png
fi

menuentry "AROS (Arix Kernel)" {
	insmod part_msdos
	insmod ext2
	set gfxpayload=1024x768
	linux /@arch@/vmlinuz-3.2.6-lfs-7.1 video=vesafb:mtrr:1,ywrap logo.nologo loglevel=3 archdir=@arch@
	initrd /@arch@/initrd.img-no-kmods
}

menuentry "Linux InitRD Shell" {
    insmod part_msdos
    insmod ext2
    set gfxpayload=1024x768
    linux /@arch@/vmlinuz-3.2.6-lfs-7.1 root=sh video=vesafb:mtrr:1,ywrap logo.nologo loglevel=3 archdir=@arch@
    initrd /@arch@/initrd.img-no-kmods
}
